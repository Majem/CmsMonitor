
{% extends 'base.html.twig' %}

{% block body %}
<style>
    .ws-sites-table .table td,.ws-sites-table .table th {
        padding: .5rem;
    }
</style>

    {% if websites | length == 0 %}
    {% else %}
        <div class="ws-sites-table col-xs-12">
            <table class="table">
                <thead class="thead-dark">
                <tr class="col-xs-12">
                    <th scope="col" style="width:10%;" class="text-center">Status</th>
                    <th scope="col" style="width:20%;">Nazwa strony</th>
                    <th scope="col" style="width:10%;text-align: center;">SSL</th>
                    <th scope="col">System</th>
                </tr>
                </thead>
                <tbody>
                {% for website in websites %}
                    <tr class="col-xs-12">
                        <th  class="text-center col-xs-1"><i class="fa fa-circle {% if website.siteSsl %} text-success {% else %} text-danger{%  endif %}" aria-hidden="true"></i></th>
                        <td>{{ website.siteName }}</td>
                        <td class="text-center">
                            {% if website.siteSsl %}
                                <i class="fa fa-check text-success" aria-hidden="true"></i>
                            {% else %}
                                <i class="fa fa-times text-danger" aria-hidden="true"></i>
                            {% endif %}
                        </td>
                        <td>
                            <div class="system-details" style="width: 55px;">
                                <i style="width: 100%;text-align: center;" class="fa fa-joomla" aria-hidden="true"></i>
                                <p style="font-size: 12px;text-align: center;width: 100%;margin-bottom: 0px;line-height: 12px;">3.8.4</p>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    {% endif %}
{% endblock %}